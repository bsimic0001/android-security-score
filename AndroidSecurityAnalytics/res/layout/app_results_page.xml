<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="5" >

    <TextView
        android:id="@+id/total_apps_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="viewAllApps"
        android:text="" />

    <TextView
        android:id="@+id/critical_apps_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="viewCriticalApps"
        android:text="" />

    <TextView
        android:id="@+id/high_apps_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="viewHighApps"
        android:text="" />

    <TextView
        android:id="@+id/medium_apps_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="viewMediumApps"
        android:text="" />

    <TextView
        android:id="@+id/low_apps_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:onClick="viewLowApps"
        android:text="" />

</LinearLayout>